component thermistor_check "LinuxCNC HAL component for checking functionality of thermistors";
pin in  u32   steps "Input steps";
pin in  u32   max_pwm "PWM steps (usually 2^n)";
pin in  float factor "The dim factor";

pin in  float   temp      "Temperature input";
pin in  float   temp_min  "The minimum temperature change that should count"
pin in  float   pid       "Output of PID control";
pin in  float   pid_min   "The minimum PID control output to react to";
pin in  u32     wait      "The number of cycle to wait before triggering an error";
pin in  bit     enable    "Enables or disables the component, out is TRUE when disabled";
pin out bit     out       "Output value -> TRUE when the thermistor works as exspected";
pin out bit     error     "Error value -> FALSE when the thermistor works as exspected";
function _  fp "Update the output value";
description """
Component for checking functionality of thermistors
.LP
TODO
""";
license "GPL";
variable u32 count = 0;
variable float last_temp = 0.0;
;;
FUNCTION(_) {
    bit active;
    float temp_change;

    if ((enable) && (id => pid_min))
    {
        temp_change = temp - last_temp;
        last_temp = temp;

        if (temp_change => temp_min)
        {
            count = 0;
        }
        else
        {
            count++;
        }

        if (count > wait)
        {
            out = 0;
            error = 1;
        }
    }
    else
    {
        out = 1;
        error = 0;
    }
}
